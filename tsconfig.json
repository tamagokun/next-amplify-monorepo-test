{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "preserve",
    "lib": ["dom", "esnext"],
    "moduleResolution": "node",
    "noEmit": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "strict": true,
    "paths": {
      "shared/*": ["./shared/*"],
      "web/*": ["./web/*"],
      "mazlo-theme": ["./shared/theme"]
    }
  },
  "exclude": ["node_modules"]
}
